{
  "name": "knoweia-desktop",
  "productName": "Knoweia",
  "description": "Knoweia desktop app for AI-powered tutoring and course learning.",
  "private": true,
  "version": "0.0.0",
  "main": "electron/main.mjs",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "test": "node --test tests/runtimeManager.start.matrix.test.mjs",
    "build:renderer": "vite build",
    "preview": "vite preview",
    "dev:renderer": "vite",
    "dev:electron": "VITE_DEV_SERVER_URL=http://localhost:3000 electron ./electron/main.mjs",
    "dev:desktop": "concurrently -k \"npm run dev:renderer\" \"npm run dev:electron\"",
    "pack:desktop": "npm run build:renderer && electron-builder --dir",
    "build:desktop": "npm run build:renderer && electron-builder"
  },
  "build": {
    "appId": "com.knoweia.desktop",
    "productName": "Knoweia",
    "directories": {
      "buildResources": "assets"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "assets/icon.png",
      "assets/icon.ico",
      "assets/icon.icns",
      "package.json"
    ],
    "mac": {
      "icon": "assets/icon.icns"
    },
    "win": {
      "icon": "assets/icon.ico"
    },
    "linux": {
      "icon": "assets/icon.png"
    }
  },
  "dependencies": {
    "@google/genai": "latest",
    "@monaco-editor/react": "^4.7.0",
    "lucide-react": "0.303.0",
    "monaco-editor": "^0.55.1",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-markdown": "9.0.1",
    "react-syntax-highlighter": "^16.1.0",
    "rehype-raw": "7.0.0",
    "remark-gfm": "4.0.0"
  },
  "devDependencies": {
    "@types/node": "^22.14.0",
    "@vitejs/plugin-react": "^4.3.4",
    "concurrently": "^9.1.2",
    "electron": "31.4.0",
    "electron-builder": "26.7.0",
    "tar": "^6.2.1",
    "typescript": "~5.8.2",
    "vite": "^6.2.0"
  }
}
